FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json yarn.lock ./
COPY tsconfig.json tsconfig.worker.json ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy source files
COPY . .

# Build the worker
RUN yarn worker:build

# Verify the build output and its structure
RUN ls -la dist/ && \
    ls -la dist/src/lib/ && \
    ls -la dist/src/utils/api/

# Start the worker
CMD ["yarn", "worker"] 