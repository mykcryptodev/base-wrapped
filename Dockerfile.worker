FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json yarn.lock ./
COPY tsconfig.json tsconfig.worker.json ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy source files
COPY . .

# Build the worker
RUN yarn worker:build

# Verify the build output exists
RUN ls -la dist/

# Start the worker
CMD ["yarn", "worker"] 